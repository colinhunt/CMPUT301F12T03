<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/white_bkg" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  >

	    <TextView
	        android:id="@+id/taskTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="28dp"
	        android:layout_marginTop="40dp"
	        android:text="@string/title"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    <TextView
	        android:id="@+id/showTaskTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="16dp"
	        android:layout_marginTop="40dp"
	        android:text="@string/test"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  >

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="22dp"
	        android:text="@string/single_task_item"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="22dp"	        
	        android:text="@string/single_task_item_desc"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	    
	</LinearLayout>
	  
    <ListView
        android:id="@+id/singleTaskList"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.12" >
    </ListView>
	    
    <Button
        android:id="@+id/likeTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/like_task"
        android:onClick="likeTaskAction" />

    <Button
        android:id="@+id/saveTaskLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_local"
        android:onClick="saveTaskLocally" />
	    	
</LinearLayout>